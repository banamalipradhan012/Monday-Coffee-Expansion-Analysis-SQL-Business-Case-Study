create database coffeedb;

-- MONDAY COFFEE ANALYSIS 

CREATE TABLE city
(
	city_id	INT PRIMARY KEY,
	city_name VARCHAR(20),	
	population	BIGINT,
	estimated_rent	FLOAT,
	city_rank INT
);

CREATE TABLE customers
(
	customer_id INT PRIMARY KEY,	
	customer_name VARCHAR(25),	
	city_id INT,
	FOREIGN KEY (city_id) REFERENCES city(city_id)
);

CREATE TABLE products
(
	product_id	INT PRIMARY KEY,
	product_name VARCHAR(35),	
	Price float
);

CREATE TABLE sales
(
	sale_id	INT PRIMARY KEY,
	sale_date	date,
	product_id	INT,
	customer_id	INT,
	total FLOAT,
	rating INT,
	FOREIGN KEY (product_id) REFERENCES products(product_id),
	FOREIGN KEY (customer_id) REFERENCES customers(customer_id) 
);

select * from city;
select * from customers;
select * from products;
select * from sales;

-- BUSINESS QUESTIONS (REAL WORLD)

-- Q.1 Coffee Consumers Count
-- How many people in each city are estimated to consume coffee, given that 25% of the population does?

select city_name,
       city_rank,
       round((population*0.25)/100000,2) as population_in_millions 
from city
order by population_in_millions desc;

-- Q.2
-- Total Revenue from Coffee Sales
-- What is the total revenue generated from coffee sales across all cities in the last quarter of 2023?

select round((sum(total))/1000000,2) as total_revenue_in_millions
from sales
where extract(year from sale_date) = 2023 and extract(quarter from sale_date) = 4;

select c.city_name,
       sum(s.total) as total_revenue 
from city c 
join customers c1 on c.city_id = c1.city_id 
join sales s on c1.customer_id = s.customer_id
where extract(year from s.sale_date) = 2023 and extract(quarter from s.sale_date) = 4
group by c.city_name
order by total_revenue desc;

-- Q.3
-- Sales Count for Each Product
-- How many units of each coffee product have been sold?

select p.product_name,
       count(s.sale_id) as sales_count
from products p 
left join sales s on p.product_id = s.product_id
group by p.product_name
order by sales_count desc;

-- Q.4
-- Average Sales Amount per City
-- What is the average sales amount per customer in each city?

select c1.city_name,
       round(avg(s.total),2) as avg_amount
from sales s 
join customers c on s.customer_id = c.customer_id
join city c1 on c.city_id = c1.city_id
group by c1.city_name
order by avg_amount desc;

select city_name,
       round(avg(customer_total),2) as avg_sales_per_customer
from (
select c1.customer_id,
       c.city_name,
       sum(s.total) as customer_total 
from city c 
join customers c1 on c.city_id = c1.city_id
join sales s on c1.customer_id = s.customer_id
group by c1.customer_id,c.city_name
) as customer_sales 
group by city_name
order by avg_sales_per_customer desc;

-- Q.5
-- City Population and Coffee Consumers (25%)
-- Provide a list of cities along with their populations and estimated coffee consumers.
-- return city_name, total current cx, estimated coffee consumers (25%)

with city_table as(
select city_name,
       round((population*0.25)/1000000,2) as coffee_consumers
from city
),
customer_table as(
select c1.city_name,
       count(distinct c.customer_id) as unique_cx
from sales s 
join customers c on s.customer_id = c.customer_id
join city c1 on c.city_id = c1.city_id
group by c1.city_name
)
select cu.city_name,
       ci.coffee_consumers as coffee_consumers_in_millions ,
       cu.unique_cx 
from city_table ci 
join customer_table cu on ci.city_name = cu.city_name;

-- Q6
-- Top Selling Products by City
-- What are the top 3 selling products in each city based on sales volume?

select * from
(
select c1.city_name,
       p.product_name,
	   count(s.sale_id) as sales_count,
       row_number() over(partition by c1.city_name order by count(s.sale_id) desc) as rwn
from sales s 
join customers c on s.customer_id = c.customer_id
join city c1 on c.city_id = c1.city_id 
join products p on s.product_id = p.product_id
group by c1.city_name,p.product_name
) as t1
where rwn<=3;

-- Q.7
-- Customer Segmentation by City
-- How many unique customers are there in each city who have purchased coffee products?

select c.city_name,
       count(distinct c1.customer_id) as unique_customers_count
from city c 
join customers c1 on c.city_id = c1.city_id
join sales s on c1.customer_id = s.customer_id
where s.product_id <= 14
group by c.city_name
order by unique_customers_count desc;

-- Q.8
-- Average Sale vs Rent
-- Find each city and their average sale per customer and avg rent per customer

SELECT 
    city_name,
    ROUND(AVG(customer_total),2) AS avg_sale_per_customer,
    AVG(city_rent) AS avg_rent_per_customer
FROM (
    SELECT 
        cu.customer_id,
        ci.city_name,
        ci.estimated_rent AS city_rent,
        SUM(s.total) AS customer_total
    FROM sales s
    JOIN customers cu 
        ON s.customer_id = cu.customer_id
    JOIN city ci 
        ON cu.city_id = ci.city_id
    GROUP BY cu.customer_id, ci.city_name, ci.estimated_rent
) t
GROUP BY city_name
ORDER BY avg_sale_per_customer DESC;

/*-- Q.9
-- Monthly Sales Growth
-- Sales growth rate: Calculate the percentage growth (or decline) in sales over 
different time periods (monthly)by each city */

with monthly_sales as(
select c.city_name,
       extract(month from s.sale_date) as month,
       extract(year from s.sale_date) as year,
       sum(s.total) as total_sales
from city c
join customers c1 on c.city_id = c1.city_id
join sales s on c1.customer_id = s.customer_id
group by c.city_name,month,year
order by c.city_name,year,month
),
growth_ratio as(
select city_name,
       month,
       year,
       total_sales as cr_month_sales,
       lag(total_sales,1) over(partition by city_name order by month,year) as prev_month_sales
from monthly_sales
)
select city_name,
	   month,
       year,
       cr_month_sales,
       prev_month_sales,
       round((cr_month_sales-prev_month_sales)/prev_month_sales*100,2) as growth_ratio 
from growth_ratio
where prev_month_sales is not null;


/*-- Q.10
-- Market Potential Analysis
-- Identify top 3 city based on highest sales, return city name, total sale, 
total rent, total customers, estimated coffee consumer */


with city_table as (
select c.city_name,
       sum(s.total) as total_revenue,
       count(distinct c1.customer_id) as unique_cust_count,
       round(sum(s.total)/count(distinct c1.customer_id),2) avg_sales_per_cust
from city c 
join customers c1 on c.city_id = c1.city_id
join sales s on c1.customer_id = s.customer_id
group by c.city_name
),
city_rent as (
select city_name,
       estimated_rent,
       round((population*0.25)/1000000,2) as estimated_coffee_consumer_in_millions
from city
)
select ct.city_name,
       ct.total_revenue,
       cr.estimated_rent as total_rent,
       ct.unique_cust_count,
       cr.estimated_coffee_consumer_in_millions,
       ct.avg_sales_per_cust,
       round(cr.estimated_rent/ct.unique_cust_count,2) as avg_rent_per_cust
from city_rent cr 
join city_table ct on cr.city_name = ct.city_name
order by total_revenue desc;


